<%= render "layouts/navbar" %>

<div class="container">
<%= simple_form_for (@post), url: post_path do |f| %>
    <%= f.input :title %>
    <%= f.label :create_your_post %>
    <%= f.text_area :body, class: "form-control mt-2"%>
    <%= f.label :Image, class:"mt-3" %>
    <%= f.file_field :image %>
    <br>
    <%= f.button :submit, class:"btn-primary mt-3" %>
<% end %>
