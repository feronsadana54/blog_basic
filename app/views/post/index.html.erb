<%= render "layouts/navbar" %>

<div class="container mt-5">
<table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Judul</th>
      <th scope="col" colspan="3" class="text-center">Aksi</th>
    </tr>
  </thead>
  <tbody>
  <% @post.each_with_index do |post,index = 0| %>
  <% index += 1 %>
    <tr>
      <th scope="row"><%= index %></th>
      <td><%= post.title %></td>
      <td><%= link_to "Show", post_path(post), class:"badge bg-info text-dark" %></td>
      <td><%= link_to "Edit", edit_post_path(post), class:"badge bg-warning text-dark" %></td>
      <td><%= link_to "Delete", post_path(post), data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure?'
            }, class:"badge bg-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>